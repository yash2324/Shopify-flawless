# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Shopify Configuration
SHOPIFY_SHOP_DOMAIN= 
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_API_VERSION=2025-04
SHOPIFY_GRAPHQL_ENDPOINT=https://flawlesscbd.myshopify.com/admin/api/2025-04/graphql.json

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=300

# Cache Configuration
CACHE_TTL_SECONDS=300
DASHBOARD_DATA_TTL=60

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cron Job Configuration
SHOPIFY_SYNC_CRON=0 * * * * *  # Every minute
DATA_CLEANUP_CRON=0 0 * * *    # Daily at midnight

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Performance Configuration
MAX_CONCURRENT_SHOPIFY_REQUESTS=5
REQUEST_TIMEOUT=30000
