# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Docker Configuration
DOCKER_IMAGE=your-dockerhub-username/shopify-analytics:latest

# Application Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# Shopify Configuration
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2025-04
SHOPIFY_GRAPHQL_ENDPOINT=https://your-shop.myshopify.com/admin/api/2025-04/graphql.json

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_strong_redis_password_here
REDIS_DB=0
REDIS_TTL=300

# Cache Configuration
CACHE_TTL_SECONDS=300
DASHBOARD_DATA_TTL=60

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cron Jobs
SHOPIFY_SYNC_CRON=0 * * * * *
DATA_CLEANUP_CRON=0 0 * * *

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# Performance
MAX_CONCURRENT_SHOPIFY_REQUESTS=5
REQUEST_TIMEOUT=30000

# Domain Configuration
DOMAIN_NAME=your-domain.com

# Frontend Configuration (if applicable)
FRONTEND_URL=https://your-domain.com